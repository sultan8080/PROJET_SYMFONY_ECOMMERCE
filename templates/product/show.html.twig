{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}

	<div class="container text-center bg-white">
		<div class="d-flex flex-column justify-content-center align-items-center">
			<div class="col-md-4">
				<img src="{{asset('uploads/images/products/'~ product.image ~'')}}" class=" img-fluid" alt=" product photo">
			</div>
			<div class="col-md-8 text-center">
				<div class="card-body">
					<h5 class="display-5">{{ product.nom }}</h5>
					<h4 class=" mb-2 text-muted">{{ product.SousTitre }}</h4>
					<hr>
					<p class="card-text">{{ product.description }}</p>

					<h3 class"m-5">
						PRIX :
						{{ product.Prix|number_format(2, ',', '.')}}
						€</h3>
					<br>
					<a href="{{ path('product_home') }}" class=" btn btn-lg btn-outline-info">Retour à la liste</a>
					<a href="{{path('addTo_panier', {'id': product.id})}}" class="btn btn-lg btn-info">Ajouter au Panier</a>

				</div>
			</div>
		</div>

	</div>

{% endblock %}
