{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<h1>Product index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prix</th>
				<th>CreatedAt</th>
				<th>Slug</th>
				<th>Image</th>
				<th>Online</th>
				<th>Description</th>
				<th>SousTitre</th>
				<th>UpdatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.nom }}</td>
					<td>{{ product.Prix }}</td>
					<td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ product.slug }}</td>
					<td>{{ product.image }}</td>
					<td>{{ product.online ? 'Yes' : 'No' }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.sousTitre }}</td>
					<td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
						<a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
